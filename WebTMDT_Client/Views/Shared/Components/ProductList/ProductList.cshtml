@using WebTMDT_Client.ViewModel
@model ProductListViewModel
@{

}
<div class="row flex-row flex-wrap justify-content-center">
    @if (Model.result.Count > 0)
    {
        @foreach (var item in Model.result)
        {
            <div class="col col-xs-8 col-md-6 col-lg-4 col-xl-3 ">
                <div class="card border border-4 rounded-3 mb-2">
                    <img src=@item.imgUrl
                 class="card-img-top product_img"
                 alt="Ảnh sp" />
                    <div class="card-body">
                        <h5 class="card-title product_name">@item.Title</h5>

                        <div class="product_price_div">
                            <p class="text-center">
                                @item.Price
                            </p>
                        </div>
                        <hr></hr>
                        <div class="d-grid gap-2 mt-2">
                            <button class="btn btn-success" type="button">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                            </button>
                            <button class="btn btn-danger" type="button">
                                <i class="far fa-heart me-2"></i> Add to Favorite
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
           
                @for (int i = 1; i <= Model.totalPage; i++)
                {
                    if (i == ViewBag.pageNumber)
                    {
                        <li class="page-item active"><a class="page-link" onclick="LoadNewProductList(@i,8)">@i </a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" onclick="LoadNewProductList(@i,8)">@i </a></li>
                    }

                }
            
            </ul>
        </nav>
    }
    @if (Model.result.Count == 0)
    {

        <div class="loading_spinner mb-5">
            <img class="img_no_product"
             alt="no-product"
             src="https://kharidbikribazar.com/photos/nproduct.png"></img>
        </div>

    }
</div>
