@{
}



@if (ViewBag.username != null)
{
    <li class="nav-item dropdown">
        <a class="dropdown-toggle text-decoration-none black" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user me-2"></i> @ViewBag.username
        </a>

        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><a class="dropdown-item" href="#">Giỏ hàng</a></li>
            <li><a class="dropdown-item" asp-controller="account" asp-action="logout" >Đăng xuất</a></li>
        </ul>
    </li>

}
else
{
    <li class="nav-item">
        <a role="button" class="nav-link" tabindex="0" asp-action="login" asp-controller="account">
            <i class="fas fa-sign-in-alt me-2" aria-hidden="true"></i>
            <p class="hide_for_1399 show_for_991 black">Đăng nhập</p>

        </a>
    </li>
}