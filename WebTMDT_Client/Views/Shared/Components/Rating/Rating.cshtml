@using WebTMDT_Client.ViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var avg = ((double)Model.FiveStar * 5 + (double)Model.FourStar * 4 + (double)Model.ThreeStar * 3 + (double)Model.TwoStar * 2 + (double)Model.OneStar * 1) / Model.TotalReview;

}
@model RatingViewModel
<div class="container w-50">
    @if (Model.TotalReview == 0)
    {
        <div class="alert alert-primary" role="alert">
            Chưa có đánh giá nào cho sản phẩm.
        </div>
    }
    <p class="text-monospace">Tổng số đánh giá : @Model.TotalReview (@Math.Round(avg, 2) <i class="fa-solid fa-star"></i>) </p>
    <div class="progress my-2">
        <p class="text-monospace"> 5</p><i class="fa-solid fa-star mx-2"></i>
        <div class="progress-bar bg-success me-1" role="progressbar" style="width: @((double)Model.FiveStar/(double)Model.TotalReview*100)%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        (@Model.FiveStar)
    </div>
    <div class="progress my-2">
        <p class="text-monospace"> 4</p><i class="fa-solid fa-star mx-2"></i>
        <div class="progress-bar bg-warning me-1" role="progressbar" style="width: @((double)Model.FourStar/(double)Model.TotalReview*100)%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        (@Model.FourStar)
    </div>
    <div class="progress my-2">
        <p class="text-monospace"> 3</p><i class="fa-solid fa-star mx-2"></i>
        <div class="progress-bar bg-warning me-1" role="progressbar" style="width: @((double)Model.ThreeStar/(double)Model.TotalReview*100)%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        (@Model.ThreeStar)
    </div>
    <div class="progress my-2">
        <p class="text-monospace"> 2</p><i class="fa-solid fa-star mx-2"></i>
        <div class="progress-bar bg-danger me-1" role="progressbar" style="width: @((double)Model.TwoStar/(double)Model.TotalReview*100)%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        (@Model.TwoStar)
    </div>
    <div class="progress my-2">
        <p class="text-monospace"> 1</p><i class="fa-solid fa-star mx-2"></i>
        <div class="progress-bar bg-danger me-1" role="progressbar" style="width: @((double)Model.OneStar/(double)Model.TotalReview*100)%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        (@Model.OneStar)
    </div>
</div>