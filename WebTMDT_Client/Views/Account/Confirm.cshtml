@{
    ViewData["Title"] = "Xác thực email";
    Layout = "_LayoutHome";
}
@model string
<div class="form-all-con h-100 ">
    <div class="d-flex justify-content-center h-100 animate__animated animate__rotateIn">
        <div class="user_card">
            <div class="d-flex justify-content-center mb-3">
                <div class="brand_logo_container">
                    <img src="https://res.cloudinary.com/dkmk9tdwx/image/upload/v1628192627/logo_v5ukvv.png"
                         class="brand_logo"
                         alt="Logo" />
                </div>
            </div>

            <div class="form_container d-flex justify-content-center flex-column align-items-center">
                <p style="display:block;font-size:25px;margin-top:50px"
                   class="text-monospace">
                    Xác thực Email
                </p>
            </div>
            <div class="form_container d-flex justify-content-center flex-column align-items-center">
                <p class="text-center">@Model</p>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Đã có tài khoản?
                    <a class="ms-2" asp-controller="account" asp-action="login">
                        Đăng Nhập
                    </a>
                </div>
                <div class="d-flex justify-content-center links">
                    Quên mật khẩu?
                    <a class="ms-2">
                        Tìm lại mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>