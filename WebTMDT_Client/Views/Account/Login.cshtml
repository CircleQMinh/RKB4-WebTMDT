@model string
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_LayoutHome";
}

<div class="form-all-con h-100 ">
    <div class="d-flex justify-content-center h-100 animate__animated animate__rotateIn">
        <div class="user_card">
            <div class="d-flex justify-content-center mb-3">
                <div class="brand_logo_container">
                    <img src="https://res.cloudinary.com/dkmk9tdwx/image/upload/v1628192627/logo_v5ukvv.png"
                         class="brand_logo"
                         alt="Logo" />
                </div>
            </div>

            <div class="form_container d-flex justify-content-center flex-column align-items-center">
                <p style="display:block;font-size:25px;margin-top:50px"
                   class="text-monospace">
                    Đăng nhập
                </p>
            </div>
            <div class="form_container d-flex justify-content-center flex-column align-items-center">
                <form asp-controller="account" asp-action="login" method="post" class="w-75">
                    <div class="mb-3">
                        <label class="form-label text-center"><i class="fa-solid fa-envelope-open-text"></i> Email :</label>
                        <input name="Email" type="email" class="form-control" placeholder="Email của bạn">
                    </div>
                    <div class="mb-3">
                        <label class="form-labe text-center"><i class="fa-solid fa-lock"></i> Password :</label>
                        <input name="Password" type="password" class="form-control" placeholder="Password của bạn">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success" type="button">OK</button>
                    </div>
                </form>
            </div>
            @if (Model != null)
            {
                <p class="text-center">@Model</p>
            }
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Chưa có tài khoản?
                    <a class="ms-2" asp-controller="account" asp-action="register">
                        Đăng Ký
                    </a>
                </div>
                <div class="d-flex justify-content-center links">
                    Quên mật khẩu?
                    <a class="ms-2">
                        Tìm lại mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


